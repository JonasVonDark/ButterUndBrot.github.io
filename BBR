    <script>
      const artistsButton = document.querySelector("#artists-button");
      const artistsList = document.querySelector("#artists-list");

      artistsButton.addEventListener("click", () => {
        artistsList.style.display = artistsList.style.display === "block" ? "none" : "block";
      });

      const merchButton = document.querySelector("#merch-button");

      merchButton.addEventListener("click", () => {
        window.location.href = "https://your-merch-store.com";
      });
